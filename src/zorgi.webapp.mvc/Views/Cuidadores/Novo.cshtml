@model zorgi.core.Models.Cuidador

@{
    ViewData["Title"] = "Novo";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="../">Início</a></li>
        <li class="breadcrumb-item"><a href="../Cuidadores">Cuidadores</a></li>
        <li class="breadcrumb-item active" aria-current="page">Novo</li>
    </ol>
</nav>

<h4>Novo cuidador</h4>
